<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>servlets.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletListadoLibros</servlet-name>
        <servlet-class>servlets.ServletListadoLibros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAddTema</servlet-name>
        <servlet-class>servlets.ServletAddTema</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAddLibro</servlet-name>
        <servlet-class>servlets.ServletAddLibro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletCarrito</servlet-name>
        <servlet-class>servlets.ServletCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletEliminar</servlet-name>
        <servlet-class>servlets.ServletEliminar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/ServletLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletListadoLibros</servlet-name>
        <url-pattern>/ServletListadoLibros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAddTema</servlet-name>
        <url-pattern>/ServletAddTema</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletAddLibro</servlet-name>
        <url-pattern>/ServletAddLibro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletCarrito</servlet-name>
        <url-pattern>/ServletCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletEliminar</servlet-name>
        <url-pattern>/ServletEliminar</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            3
        </session-timeout>
    </session-config>
</web-app>
